<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_settings"
    tools:context=".account_settings.AccountSettingsActivity">

    <ImageView
        android:id="@+id/imageViewTwitter"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_twitter"
        app:layout_constraintBottom_toTopOf="@+id/imageViewInstagram"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageViewInstagram"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_instagram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageViewYouTube"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewTwitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_youtube" />

    <TextView
        android:id="@+id/textViewIsAuthTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="18dp"
        android:padding="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewTwitter"
        app:layout_constraintEnd_toStartOf="@+id/imageViewTwitterUserAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewTwitter"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/textViewIsAuthInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="18dp"
        android:padding="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewInstagram"
        app:layout_constraintEnd_toStartOf="@+id/imageViewInstagramUserAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewInstagram"
        app:layout_constraintVertical_bias="0.529" />

    <TextView
        android:id="@+id/textViewIsAuthYouTube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="18dp"
        android:padding="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewYouTube"
        app:layout_constraintEnd_toStartOf="@+id/imageViewYouTube"
        app:layout_constraintTop_toTopOf="@+id/imageViewYouTube"
        app:layout_constraintVertical_bias="0.529" />

    <ImageView
        android:id="@+id/imageViewTwitterUserAvatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewTwitter"
        app:layout_constraintEnd_toStartOf="@+id/imageViewTwitter"
        app:layout_constraintTop_toTopOf="@+id/imageViewTwitter" />

    <ImageView
        android:id="@+id/imageViewInstagramUserAvatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewInstagram"
        app:layout_constraintEnd_toStartOf="@+id/imageViewInstagram"
        app:layout_constraintTop_toTopOf="@+id/imageViewInstagram" />

    <ImageView
        android:id="@+id/imageViewYouTubeUserAvatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewYouTube"
        app:layout_constraintEnd_toStartOf="@+id/imageViewYouTube"
        app:layout_constraintTop_toTopOf="@+id/imageViewYouTube" />


</android.support.constraint.ConstraintLayout>